.header 
	background-color #FFF
	padding 20px 0
	
	.container 
		width 94%
		margin 0 auto

		.titulo
			font-weight bold
			font-size 2em
			margin-bottom 20px
			>a 
				text-decoration none
				color inherit

		.nav-link 
			padding 10px
			margin-bottom 10px
			color #9799A6
			background-color #FFF
			text-decoration none
			transition .5s
			display block
			border-bottom 1px solid #9799A6
		
		.nav-link-app
			font-weight bold
	

@media(min-width: 769px) 

	.header
		
		.container 
			width 85%	

			.titulo 
				margin 0

			.nav 
			width auto
		
				.nav-link
					border-radius 5px
					border 1px solid #9799A6
					width auto
					margin 0 0 0 10px

					&:hover 
						color #FFF
						background-color #9799A6